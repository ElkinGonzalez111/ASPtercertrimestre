@model IEnumerable<ASPtercertrimestre.Models.producto_compra>

@{
    ViewBag.Title = "Producto_Compra";
}

<h2>Producto Compra</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_compra)
        </th>
        <th>
            Producto
        </th>
        <th>
            Cantidad
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_compra)
        </td>
        <td>
            @ASPtercertrimestre.Controllers.ProductocompraController.NombreProducto(item.id_compra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id }, new { @class = "linkDelete" })
        </td>
    </tr>
}

</table>

@section scripts{
    <script>
        $("linkDelete").click(function (event) {
            if (!confirm('Esta seguro de eliminar? ')) {
            event.preventDefault();
            }
        })
        </script>
   
    }
