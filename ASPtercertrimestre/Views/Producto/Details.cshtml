@model ASPtercertrimestre.Models.producto

@{
    ViewBag.Title = "Registrar`-Producto";
}

<h2>Registrar</h2>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            Precio Unitario:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.percio_unitario)
        </dd>

        <dt>
            Descripcion:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <dt>
            Cantidad:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

        <dt>
            Proveedor:
        </dt>

        <dd>
            @ASPtercertrimestre.Controllers.ProductoController.NombreProveedor(Model.id_proveedor)
        </dd>

        <dt>
            Imagen
        </dt>

        <dd>
            <img class="img-responsive" src="@Url.Content("~/" + ViewBag.imagen)" alt="Image" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id })
    @Html.ActionLink("Ver todo", "Index")
</p>
